@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using OnlineShoppingTeam4.Models
@using OnlineShoppingTeam4.Context

@{
    var userManager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
}

@if (userManager.IsInRole(User.Identity.GetUserId(), "Admins"))
{
    <li id="security" class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-key fa-fw"></i> Security<b class="caret"></b></a>
        <ul class="nav nav-second-level">
            <li id="users">
                <a href='@Url.Action("Index", "Account")'><i class="fa fa-user fa-fw"></i> use</a>


            </li>

            <li id="roles">
                <a href='@Url.Action("RolesIndex", "Account")'>
                    <i class="fa fa-gift fa-fw"></i> Roles
                </a>


            </li>
        </ul>
    </li>
}